        },
        "entity_action": {
            "type": "origins:and",
            "actions": [{
                "type": "origins:modify_resource",
                "resource": "shoreline:vp-insatiable-hunger_blood-bar",
                "modifier": {
                    "id": "shoreline:vp-blood-regeneration_recuperation",
                    "operation": "add_base_early",
                    "amount": -2
